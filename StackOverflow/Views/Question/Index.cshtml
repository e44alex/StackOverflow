@model StackOverflow.Models.Question

@{
    ViewBag.Title = "title";
    Layout = @Layout;
}

<h2>@Model.Topic</h2>
@* The question *@
<div class="card">
    <div class="card-header">Model.Topic</div>
    <div class="card-body">
        @Model.Body
    </div>
    <div class="card-footer">Created by: <a>@Model.Creator.Login</a> on @Model.DateCreated</div>
</div>

@* list of answers *@
<div>
    @foreach (var answer in Model.Answers)
    {
        <div class="card">
            <div class="card-header">@answer.Creator.Login</div>
            <div class="card-body">@answer.Body</div>
            <div class="card-footer">@answer.DateCreated</div>
        </div>
    }
</div>

@* add answer block *@
<div>
    <form asp-controller="">
        <textarea class="form-control" placeholder="Enter your answer"></textarea>
        <input type="submit" name="Submit answer" />
    </form>
</div>